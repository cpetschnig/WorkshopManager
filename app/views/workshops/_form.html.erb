<%= form_for(@workshop) do |f| %>
  <% if @workshop.errors.any? %>
    <div id="error_explanation">
      <h2><%= t('errors.on_save', :count => @workshop.errors.count) %>:</h2>

      <ul>
      <% @workshop.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :start_at %><br />
    <%= f.datetime_select :start_at %>
  </div>
  <div class="field">
    <%= f.label :duration %> [<%= t('time.units.minutes.short') %>]<br />
    <%= f.text_field :duration %>
  </div>
  <div class="field">
    <%= f.label :room_id %><br />
    <%= f.select :room_id, Room.all.map{|room| [room.name, room.id]} %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
